{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie
	{{category.name}}
{% endblock %}

{% block body %}


	<div class="album py-5 bg-light">
			<div class="row">
				<div class="col-12">
					<h1>Liste des produits de la catégorie
						{{category.name}}
					</h1>
				</div>

				{% for product in products %}
					<div class="col-4 mx-2">
						<div class="card mb-4 box-shadow h-100 ">
            <a href="{{path('app_products_details', {slug : product.slug})}}">
							<img class="card-img-top w-100" src="https://picsum.photos/300/200?random=1" alt="Card image cap">
            </a>
							<div class="card-body">
								<p class="card-text">{{product.name}}</p>
								<p class="card-text">{{product.description}}</p>

								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<a href="" class="btn btn-sm btn-secondary">Voir</a>
										<button type="button" class="btn btn-sm btn-secondary">Edit</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>


{% endblock %}
